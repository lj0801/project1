<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resgin_Activity"
    android:orientation="vertical"
    android:background="@mipmap/login"
    >
        <EditText
            android:layout_gravity="center"
            android:id="@+id/edit_resgin_phone"
            android:hint="手机号"
            android:drawableLeft="@mipmap/login_icon_eye"
            android:layout_marginTop="200dp"
            android:layout_width="350dp"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/edit_resgin_yan"
            android:layout_gravity="center"
            android:hint="验证码"
            android:drawableLeft="@mipmap/reg_icon"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/edit_resgin_login"
            android:layout_gravity="center"
            android:hint="登录密码"
            android:drawableRight="@mipmap/login_icon_lock"
            android:drawableLeft="@mipmap/login_icon_phone"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/resgin_login"
            android:text="注册"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp" />
</LinearLayout>